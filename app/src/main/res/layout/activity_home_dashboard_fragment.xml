<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeDashboardFragment">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idBarChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/days"

        />

    <RelativeLayout
        android:id="@+id/days"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toBottomOf="@id/idBarChart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/Mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/mon"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/tue"
            android:layout_toRightOf="@id/Mon"
            />

        <TextView
            android:id="@+id/Wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/wed"
            android:layout_toRightOf="@id/Tue"
            />

        <TextView
            android:id="@+id/Thur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/thur"
            android:layout_toRightOf="@id/Wed"
            />

        <TextView
            android:id="@+id/Fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/fri"
            android:layout_toRightOf="@id/Thur"
            />

        <TextView
            android:id="@+id/Sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/sat"
            android:layout_toRightOf="@id/Fri"
            />

        <TextView
            android:id="@+id/Sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/sun"
            android:layout_toRightOf="@id/Sat"
            />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
