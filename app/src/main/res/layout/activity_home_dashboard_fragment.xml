<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeDashboardFragment">

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's good to see you again!"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:background="@color/banner_green"
        />

    <TextView
        android:id="@+id/intro2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here's how much you've done for Mother Earth this week!"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toBottomOf="@id/intro"
        android:padding="10dp"
        android:background="@color/banner_green"
        />

    <TextView
        android:id="@+id/monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday: xx items recycled"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toBottomOf="@id/intro2"
        android:padding="10dp"

        />

    <TextView
        android:id="@+id/tuesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuesday: xx items recycled"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toBottomOf="@id/monday"
        android:padding="10dp"
        android:background="@color/banner_green"
        />

    <TextView
        android:id="@+id/wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wednesday: xx items recycled"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toBottomOf="@id/tuesday"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/Thursday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thursday: xx items recycled"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toBottomOf="@id/wednesday"
        android:padding="10dp"
        android:background="@color/banner_green"
        />

    <TextView
        android:id="@+id/friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday: xx items recycled"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toBottomOf="@id/Thursday"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/saturday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday: xx items recycled"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toBottomOf="@id/friday"
        android:padding="10dp"
        android:background="@color/banner_green"
        />

    <TextView
        android:id="@+id/sunday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday: xx items recycled"
        android:textColor="@color/text_dirtygreen"
        app:layout_constraintTop_toBottomOf="@id/saturday"
        android:padding="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>